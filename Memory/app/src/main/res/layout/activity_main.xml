<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp"
    android:weightSum="2"
    tools:context="ch.appquest.brudinne.memory.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewLeft"
            card_view:cardElevation="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:gravity="left"
            card_view:cardBackgroundColor="@color/accent_material_light"
            card_view:cardCornerRadius="7dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/buttonLeft"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Press Me"
                    android:layout_alignParentTop="true"/>
                <ImageView
                    android:id="@+id/imageLeft"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:id="@+id/textLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your work is going to fill a large part of your life."
                    android:layout_below="@id/imageLeft"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            card_view:cardElevation="10dp"
            android:layout_toRightOf="@id/cardViewLeft"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:gravity="right"
            card_view:cardBackgroundColor="@color/accent_material_light"
            card_view:cardCornerRadius="7dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/buttonRight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Press Me"
                    android:layout_alignParentTop="true"/>
                <ImageView
                    android:id="@+id/imageRight"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:id="@+id/textRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your work is going to fill a large part of your life."
                    android:layout_below="@id/imageRight"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>